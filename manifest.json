{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Widen code block for esa",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Widen code block for esa",
  "author": "Toshinari Suzuki",
  "homepage_url": "http://suzuki.toshinari.jp",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [{
    "matches": ["*://*.esa.io/*"],
    "run_at": "document_end",
    "js": ["script.js"],
    "all_frames": true
  }]
}
